<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fiction">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="309dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi1"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_1"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi2"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menufi1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_2"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi3"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menufi2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_3"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">
                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi4"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menufi3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_4"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">
                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi5"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menufi4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_5"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">
                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menufi6"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="16dp"
                    android:outlineAmbientShadowColor="@color/brown_bg"
                    android:layout_width="307dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menufi5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/title_fiction_6"
                        android:textColor="@color/brown_bg"
                        android:textSize="35sp"
                        android:fontFamily="@font/princesssofia_regular"
                        android:gravity="center">
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>